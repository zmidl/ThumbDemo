<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>

        <local:ThumbControl  Canvas.Left="50" Canvas.Top="50" >
            <Ellipse Stroke="DarkRed" StrokeThickness="2" IsHitTestVisible="False"/>
        </local:ThumbControl>

        <local:ThumbControl  Canvas.Left="180" Canvas.Top="50" >
            <Rectangle Stroke="DarkRed" StrokeThickness="2" IsHitTestVisible="False"/>
        </local:ThumbControl>
  </Canvas>
</Window>
